@model WedBanLinhKienDienTu.Models.EF.Content

@{
    ViewBag.Title = "Thêm bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">

                    <strong class="text-uppercase text-danger">Thêm bài viết</strong>
                </div>
                <div class="col-md-6 text-right">
                    <button class="btn btn-sm btn-success" type="submit" value="Create"><i class="fas-fa-save"></i>Lưu</button>
                    <a href="@Url.Action("Index","Content")" class="btn btn-sm btn-danger">
                        <i class="fas fa-long-arrow-alt-left"></i>Quay về
                    </a>



                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label>Tên bài viết<span class="text-danger">(*)</span></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })





                        <div class="form-group">
                            <label>Mô tả<span class="text-danger">(*)</span></label>
                            @Html.TextAreaFor(model => model.MetaDescriptions, new { @class = "form-control", @row = 3 })
                            @Html.ValidationMessageFor(model => model.MetaDescriptions, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="col-md-3">





                </div>

            </div>



        </div>
    </div>

}





