
@model IEnumerable<WedBanLinhKienDienTu.Models.EF.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Content Wrapper. Contains page content-->
@using (Html.BeginForm("Index", "menu", FormMethod.Post))
{
    <div class="content-wrapper">
        <section class="content my-2">
            <!--Default box-->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">
                                MENU
                            </strong>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")
                    <div class="row">
                        <div class="col-md-4">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-header" id="headingCategory">
                                        <span> Danh mục sản phẩm</span>
                                        <span class="float-right btn btn-sm btn-info" data-toggle="collapse" data-target="#collapseCategory" aria-controls="collapseCategory">
                                            <i class="fas fa-plus"></i>
                                        </span>
                                    </div>
                                    <div id="collapseCategory" class="collapse p-2 m-2" aria-labelledby="headingCategory" data-parent="#accordionExample">
                                        @foreach (var row in ViewBag.ListCategory)
                                        {
                                            <fieldset class="form-group">
                                                <input name="itemcat" value="@row.ID" id="category_@row.ID" type="checkbox" />
                                                <label for="category_@row.ID">@row.Name</label>
                                            </fieldset>
                                        }
                                        <fieldset class="form-group">
                                            <input type="submit" name="ThemCategory" value="Thêm" class="btn btn-success form-control" />
                                        </fieldset>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="col-md-8">
                            <table class="table table-bordered">
                                <tr>
                                    <th>Tên Menu</th>
                                    <th>Chức năng</th>
                                    <th>ID</th>

                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Text
                                        </td>




                                        <td class="text-center">
                                            @if (item.Status != true)
                                            {
                                                <a href="@Url.Action("Status", "Menu", new { @id = item.ID })" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-toggle-off"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Status", "Menu", new { @id = item.ID })" class="btn btn-sm btn-success">
                                                    <i class="fas fa-toggle-on"></i>
                                                </a>
                                            }


                                            <a href="@Url.Action("Edit", "Menu", new { @id = item.ID })" class="btn btn-sm btn-info" />
                                            <i class="fas fa-edit"></i>
                                            <a href="@Url.Action("Details", "Menu", new { @id = item.ID })" class="btn btn-sm btn-success" />
                                            <i class="fas fa-eye"></i>
                                            <a href="@Url.Action("Delete", "Menu", new { @id = item.ID })" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            @item.ID
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
                <!--/.card--body -->
            </div>
            <!--/.card -->
        </section>
        <!--/.content-->
    </div>


}
<!--/.content-wrapper -->
